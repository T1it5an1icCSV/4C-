<Window x:Class="WpfApp6.GLAVNAY"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="gg" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="26*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="PageFrame" Grid.Row="1"></Frame>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="153*"/>
                <ColumnDefinition Width="388*"/>
                <ColumnDefinition Width="259*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Выйти" Name="exit" Grid.Column="0" Background="#FFC7F3FF" Margin="7" Click="exit_Click"/>
            <Button Content="Изменить тест" Name="change" Grid.Column="1" Margin="7" Background="#FFC7F3FF" Click="change_Click"/>
            <Button Content="Пройти тест" Name="start"  Grid.Column="2" Margin="7" Background="#FFC7F3FF" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
        